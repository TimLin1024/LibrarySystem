<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:divider="@drawable/divider_5_horizontal"
    android:orientation="vertical"
    android:showDividers="end">

    <TextView
        android:id="@+id/tv_book_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:paddingStart="10dp"
        android:paddingTop="3dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        tools:text="乡土中国/费孝通著 社会文化"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/lightGray"/>

    <TextView
        android:id="@+id/tv_borrow_date"
        style="@style/TvBookMsgStyle"
        android:drawablePadding="3dp"
        tools:text="借期：12121"/>

    <TextView
        android:id="@+id/tv_return_date"
        style="@style/TvBookMsgStyle"
        android:drawablePadding="3dp"
        tools:text="还期：12121"/>

    <TextView
        android:id="@+id/tv_has_return"
        style="@style/TvBookMsgStyle"
        android:drawablePadding="3dp"
        tools:text="已还：是"/>
</LinearLayout>